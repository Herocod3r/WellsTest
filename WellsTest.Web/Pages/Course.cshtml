@page
@model CourseModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-10 col-sm-offset-2">
            <form method="post">
                <h4>Enter Student Detail</h4>
                <input asp-for="Course.Name" placeholder="Enter Course name" />
                <br />
                <label>Choose Class: </label>  <select asp-items="Model.ClassesList" asp-for="Course.ClassId"></select>
                <br />


                <label>Choose Teacher: </label>  <select asp-items="Model.TeachersList" asp-for="Course.TeacherId"></select>
                <br />

                <button type="submit">Add</button>
            </form>
        </div>
        <hr />
    </div>
    <div class="row">
        <h4>Courses</h4>
        <div class="col-sm-offset-2 col-sm-10 col-sm-offset-2">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Teacher</th>
                </tr>
                @foreach (var item in Model.Courses)
                {
                <tr><td>@item.Name</td> <td>@item.Class.Name</td>  <td>@item.Teacher.Fullname</td></tr>
                }
            </table>


        </div>
    </div>
</div>
