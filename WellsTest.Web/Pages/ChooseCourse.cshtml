@page
@model ChooseCourseModel
@{
}


<div class="container">

    <div class="row">
        <h4>Choose Course You Want To Enter Records For</h4>
        <div class="col-sm-offset-2 col-sm-10 col-sm-offset-2">
            <ul>
                @foreach (var item in Model.Courses)
                {
                    <li><a href='@("/Record?courseId="+@item.Id)'> @item.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>
